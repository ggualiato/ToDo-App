<!DOCTYPE html>
<html>
<head>
	<title>Lista de Tarefas</title>
	<script type="text/javascript" src="assets/js/lib/jquery-3.2.1.min.js"></script>
	<script src="assets/js/ff30d980a8.js"></script>
	<link rel="stylesheet" type="text/css" href="assets/css/todos.css">
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
</head>
<body>

<form action="/logout" method="post">
	<input type="submit" value="Logout">
</form>
<form action="/teste" method="get">
	<input type="submit" value="getTodos">
</form>

<div id="messages">
	<p>{{messages}}</p>
</div>
<div id="notepad">
	<h1>Lista de Tarefas<i class="fa fa-plus" aria-hidden="true"></i></h1>

  <form action="/createtodo" method="POST">
    <input class="input-notepad" type="text" placeholder="Adicionar Nova Tarefa" name="txtTodo">
    <input class="input-notepad" type="submit">
  </form>

	<ul>
		{{#each todos}}
		<li><span><i class='fa fa-trash'></i></span>{{this}}</li>
		{{/each}}
	</ul>

</div>

<script type="text/javascript" src="assets/js/todos.js"></script>
</body>
</html>
